{"ast":null,"code":"export default {\n  name: \"HotForm\",\n  data() {\n    return {\n      paes: null,\n      salsichas: null,\n      opcionaisdata: null,\n      nome: null,\n      pao: null,\n      salsicha: null,\n      opcionais: [],\n      msg: null\n    };\n  },\n  methods: {\n    async getIngredientes() {\n      const req = await fetch(\" http://localhost:3000/ingredientes\");\n      const data = await req.json();\n      this.paes = data.paes;\n      this.salsichas = data.salsichas;\n      this.opcionaisdata = data.opcionais;\n    },\n    async createHotdog(e) {\n      e.preventDefault();\n      const data = {\n        nome: this.nome,\n        salsicha: this.salsicha,\n        pao: this.pao,\n        opcionais: Array.from(this.opcionais),\n        status: \"Solicitado\"\n      };\n      const dataJson = JSON.stringify(data);\n      const req = await fetch(\" http://localhost:3000/hotdogs\", {\n        method: \"POST\",\n        headers: {\n          \"Content-Type\": \"application/json\"\n        },\n        body: dataJson\n      });\n      const res = await req.json();\n\n      //colocar mensagem\n\n      // ToDo: limpar mensagem\n\n      this.nome = \"\";\n      this.salsicha = \"\";\n      this.pao = \"\";\n      this.opcionais = \"\";\n    }\n  },\n  mounted() {\n    this.getIngredientes();\n  }\n};","map":{"version":3,"mappings":"AAiEA,eAAe;EACbA,IAAI,EAAE,SAAS;EACfC,IAAI,GAAG;IACL,OAAO;MACLC,IAAI,EAAE,IAAI;MACVC,SAAS,EAAE,IAAI;MACfC,aAAa,EAAE,IAAI;MACnBC,IAAI,EAAE,IAAI;MACVC,GAAG,EAAE,IAAI;MACTC,QAAQ,EAAE,IAAI;MACdC,SAAS,EAAE,EAAE;MACbC,GAAG,EAAE;IACP,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,eAAe,GAAG;MACtB,MAAMC,GAAE,GAAI,MAAMC,KAAK,CAAC,qCAAqC,CAAC;MAC9D,MAAMZ,IAAG,GAAI,MAAMW,GAAG,CAACE,IAAI,EAAE;MAE7B,IAAI,CAACZ,IAAG,GAAID,IAAI,CAACC,IAAI;MACrB,IAAI,CAACC,SAAQ,GAAIF,IAAI,CAACE,SAAS;MAC/B,IAAI,CAACC,aAAY,GAAIH,IAAI,CAACO,SAAS;IACrC,CAAC;IAED,MAAMO,YAAY,CAACC,CAAC,EAAE;MACpBA,CAAC,CAACC,cAAc,EAAE;MAClB,MAAMhB,IAAG,GAAI;QACXI,IAAI,EAAE,IAAI,CAACA,IAAI